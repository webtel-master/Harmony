<MudDrawer @bind-Open="IsOpened" @ref="_drawer" 
           Fixed="false" Anchor="Anchor.End"
           Elevation="0" Width="400px"
           Class="pa-4"
           Variant="@DrawerVariant.Persistent">
    <MudDrawerHeader>
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6">@TemplateName</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Error" OnClick="Close" aria-label="delete"></MudIconButton>
        </MudStack>
        
    </MudDrawerHeader>
    @if (AutomationType.HasValue)
    {
        switch(AutomationType)
        {
            case Domain.Enums.Automations.AutomationType.SyncParentAndChildIssues:
                <SyncParentAndChildIssues BoardId="BoardId" AutomationType="AutomationType.Value" />
                break;
            case Domain.Enums.Automations.AutomationType.SmartAutoAssign:
                <SmartAutoAssign BoardId="BoardId" AutomationType="AutomationType.Value" />
                break;
        }
    }
</MudDrawer>